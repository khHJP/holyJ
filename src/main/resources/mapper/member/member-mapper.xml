	<select id="selectOneMember" resultMap="memberMap">
		select
			*
		from
		    member
		where
			member_id = #{memberId}
	</select>
		<update id="updateMember"> 
		update 
			member 
		set 
			nickname = #{nickname}, 
			password = #{password}, 
			phone = #{phone},
			profile_img = #{profileImg}
		where 
			member_id = #{ memberId } 
		</update>
		
	<resultMap type="member" id="memberMap"></resultMap>
	
	<!-- ðŸ± í•˜ë‚˜ ë ðŸ± -->	


	<!-- ðŸ‘» ì •ì€ ì‹œìž‘ ðŸ‘» -->
	
	<insert id="insertMember">
		insert into
			member
		values (
			#{memberId},
			#{password},
			#{nickname},
			#{phone},
			default,
			default,
			#{dongNo},
			#{dongRange},
			default,
			default,
			default
		)
	</insert>
	
	<insert id="insertauthority">
		insert into
			authority
		values (
			#{memberId},
			'ROLE_USER'
		)
	</insert>

